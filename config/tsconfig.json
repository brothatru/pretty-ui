{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../public/esm",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "../src/*"
      ],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "../src/components/",
    "../src/interfaces/"
  ]
}