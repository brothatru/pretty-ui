{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "../src/*"
      ],
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "../node_modules",
    "../public"
  ],
  "include": [
    "../next-env.d.ts",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ]
}